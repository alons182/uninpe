@import "iconos.styl"

$gris_oscuro = #53565a
$gris_claro= #a7a7a7
$verde = #a6c31e
$azul = #3a90da
$gris_claro2 = #ebeae6


body
    background #fff
    color #53565a
    font-family: 'Open Sans', sans-serif;
    font-size 14px
    line-height 1.4

#wrapper
	margin 0 auto
	width 960px

	header
		background $gris_oscuro
		padding-top 0px
		

		#logo
			display inline-block
			padding .5em 1em
			vertical-align top
			width 300px


		#info-header
			float right
			padding 1em
			

			#info 
				color #fff
				font-size 12px

				a
					border-right 1px solid #fff
					color #FFF
					padding 0.5em
					text-decoration none
					text-transform uppercase

			span >	a 
				color #FFF
				border-right none !important		
				

			#buscador
				margin 20px 0 0 0
				width 300px

				.element-invisible
					display none

				input[type="text"]
					background url('../img/icon_lupa.png') no-repeat center right #fff
					height 25px
					width 100%
		#menu
			background #FFF
			overflow hidden
			width 100%

			ul 
				margin 0
				padding 0

				li 
					//display inline-block
					padding .5em .5em
					//vertical-align top
					float left 

					a 
						font-size 14px
						color $gris_oscuro
						font-weight 700
						text-decoration none
						text-transform uppercase
					a:hover
						color $gris_claro
				.current a 
					color $verde

	#banner
	    height 350px
	    width 100%
	  
	    #slideshow
	        height 350px
	        margin 0 auto
	        width 100%


	        .slide
	            background-position center top
	            background-repeat no-repeat
	            height 100%
	            text-align center
	            width 100%

	            .info-banner
	            	color #FFF
	            	float right
	            	padding 1em
	            	width 218px

					ul 
						//margin 0
						padding 0 0 0 10px
						font-size 13px
						text-align left

						li 
							padding .5em 0
					h1 
						font-size 24px
						font-weight 400
						margin 0
						text-transform uppercase

						strong
							font-size 30px
							font-weight 700
					p 
						font-size 14px
						margin 2em 0 


					a 
						background #FFF
						color $gris_oscuro
						padding .3em 1.5em
						text-decoration none
					a:hover
						background $verde
						color #FFF

	#middle-content
		margin-bottom 20px
		.programa:hover
			background $verde
			h1
				color #FFF
		.programa
			background $gris_claro2
			display inline-block
			margin-right -0.2em
			vertical-align top
			width 354px

			h1
				font-size 18px
				text-align center
			ul 
				margin 0
				padding 0
				list-style none

				li 
					
					font-size 13px
					text-align right
					margin 1em

					a 
						
						display block
						text-transform uppercase
						color #fff
						text-decoration none
						padding .5em
						border-radius 10px
						-webkit-box-shadow 0 5px 6px 1px rgba(0, 0, 0, 0.5)
						-moz-box-shadow 0 5px 6px 1px rgba(0, 0, 0, 0.5)
						box-shadow 0 5px 6px 1px rgba(0, 0, 0, 0.5)

						.subtitle
							display block
							text-transform none
							font-size 11px
					a:hover
						background-color #fff
						color $gris_claro

					#admin_hotelera
						background url('../img/bg_admin_hotelera.png') no-repeat top left $gris_claro
						
					#admin_marketing, #admin_marketing_empresas
						background url('../img/bg_admin_marketing.png') no-repeat top left  $gris_claro
					#admin_rrhh, #admin_rrhh_empresas
						background url('../img/bg_admin_rrhh.png') no-repeat top left  $gris_claro
					#admin_calidad
						background url('../img/bg_admin_calidad.png') no-repeat top left  $gris_claro
					#admin_empresas
						background url('../img/bg_admin_empresas.png') no-repeat top left  $gris_claro
					#admin_financiera
						background url('../img/bg_admin_contable.png') no-repeat top left  $gris_claro
					#admin_financiera:hover, #admin_hotelera:hover, #admin_marketing:hover, #admin_marketing_empresas:hover, #admin_rrhh:hover, #admin_rrhh_empresas:hover,
					#admin_calidad:hover,#admin_empresas:hover
						background-color #fff
						color $gris_claro
		.conocenos_video
			background $gris_claro
			display inline-block
			vertical-align top 
			width 234px
			min-height 295px
			padding .5em

			h1
				font-size 18px
				text-align center
				color #fff
			img 
				width 100%
			

			

			

	

	#contenido
		background $gris_claro2

		#center-content
			
			.content
				display inline-block
				height 340px
				margin-right -0.2em
				overflow hidden
				padding .5em
				position relative
				vertical-align top
				ul
					margin 0
					padding 0
					list-style none

					li 
						
						.mod-articles-category-title 
							color $verde
							font-size 14px
							font-weight 400
							margin 0 
							text-decoration none
						a:hover
							text-decoration underline

				h3
					font-size 24px
					text-transform uppercase
					margin-bottom 10px
				
				p 
					font-size 13px
				/*a 
					background $gris_oscuro
					bottom 10px
					color #FFF
					display block
					float right
					font-size 20px
					height 30px
					position absolute
					right 10px
					text-align center
					text-decoration none
					width 30px*/
				/*a:hover
					background $verde*/



			.left-content
				background $gris_claro2

			.left-content, .center-content
				width 220px

			.testimonials
				background $gris_oscuro
				color #fff
				padding .5em 1em 
				width 455px

				.fecha, .autor
					display block
					font-style italic

		#breadcumbs
			//background $gris_claro2
			display block
			padding .5em
			
			ul
				margin 0
				padding 0
				li 
					list-style none
					display inline-block
					vertical-align top
					//margin-right .5em

					.divider
						padding 0 5px

		#title, .b2jcontainer h2
			background $gris_oscuro
			color #FFF
			display block
			font-size 30px
			padding .1em
			text-transform uppercase
			p,h1,h2,h3,h4 
				margin 0


		#left,#main,.item-page,.search ,#k2Container, .blog  
			display inline-block
			margin-right -0.2em
			vertical-align top
		#left
			background $gris_claro2
			width 250px
			padding .5em

			h3
				font-size 1em

			ul
				margin 20px 0
				//min-height 390px
				padding 0 0 0 20px

				
				li 
					list-style disc
					margin-bottom 5px
					


					a 
						color $gris_oscuro
						display block
						font-size 14px
						padding .3em .5em
						text-decoration none
					a:hover
						background $gris_oscuro
						color #FFF
				.parent
					list-style none
					.separator
						font-size 1em
						font-weight bold


		#main,.item-page,.search, #k2Container,.blog  
			background #fff
			min-height 400px
			padding 1em
			width 667px
			h2
				font-size 18px
				font-style italic
				font-weight 400
			p 
				font-size 14px
				line-height 24px
			img
				max-width 100%
			dl 
				margin 0
				dd 
					margin 0
					font-size 12px
			.article-info-term
				display none

		.blog
			
			h2
				margin-bottom 0

			.items-row
				border-bottom 1px solid $gris_claro
				padding .5em
			

			.readmore
				a 
					background $verde
					text-decoration none
					color #FFF
					padding .3em





	footer
		background $gris_oscuro
		color #ebeae6
		margin-top 20px

		a 
			color #ebeae6
			text-decoration none
		.column
			display inline-block
			margin-right -0.2em
			padding .5em
			vertical-align top
			width 220px

			h3
				text-transform uppercase
			ul
				list-style disc
				padding 0 0 0 20px
				
				li
					font-size 14px
					padding .3em
					text-transform uppercase

					

			input[type="text"],input[type="email"],textarea
				width 100%

			button,input[type="submit"]
				background #fff
				border none
				clear both
				color $gris_oscuro
				cursor pointer
				float left
				font-size 12px
				height 26px
				margin-right 4px
				width 80px
		.column-4
			#logo-footer
				margin-top 20px
			p 
				font-size 12px
				font-style italic
			
			#facebook,#twitter
				background #FFF
				border-radius 5px
				color $gris_oscuro
				display inline-block
				padding .5em
				margin-right .5em

			#facebook:hover,#twitter:hover
				background $verde	



			

			 
				






			
			








