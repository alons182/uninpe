@import "iconos.styl"

$gris_oscuro = #53565a
$gris_claro= #a7a7a7
$verde = #a6c31e
$gris_claro2 = #ebeae6


body
    background #fff
    color #53565a
    font-family: 'Open Sans', sans-serif;
    font-size 16px
    line-height 1.4

#wrapper
	margin 0 auto
	width 960px

	header
		background $gris_oscuro
		padding-top 20px
		

		#logo
			display inline-block
			padding 1em
			vertical-align top
			width 300px


		#info-header
			float right
			padding 1em
			

			#info 
				color #fff
				font-size 14px

				a
					border-right 1px solid #fff
					color #FFF
					padding 0.5em
					text-decoration none
					text-transform uppercase

			span >	a 
				color #FFF
				border-right none !important		
				

			#buscador
				margin 20px 0 0 0
				width 300px

				.element-invisible
					display none

				input[type="text"]
					background url('../img/icon_lupa.png') no-repeat center right #fff
					height 25px
					width 100%
		#menu
			background #FFF

			ul 
				margin 0
				padding 0

				li 
					display inline-block
					padding .5em .5em
					vertical-align top 

					a 
						color $gris_oscuro
						font-weight 700
						text-decoration none
						text-transform uppercase
					a:hover
						color $gris_claro
	#banner
	    height 350px
	    width 100%
	  
	    #slideshow
	        height 350px
	        margin 0 auto
	        width 100%


	        .slide
	            background-position center top
	            background-repeat no-repeat
	            height 100%
	            text-align center
	            width 100%

	            .info-banner
	            	color #FFF
	            	float right
	            	padding 1em
	            	width 218px

					h1 
						font-size 24px
						font-weight 400
						margin 0
						text-transform uppercase

						strong
							font-size 30px
							font-weight 700
					p 
						font-size 14px
						margin 2em 0 


					a 
						background #FFF
						color $gris_oscuro
						padding .3em 1.5em
						text-decoration none
					a:hover
						background $verde
						color #FFF

	#middle-content
		margin-bottom 20px
		.noticia:hover
			background $verde
		.noticia
			background $gris_claro
			display inline-block
			margin-right -0.2em
			vertical-align top
			width 480px
			

			figure, a 
				display inline-block
				height 200px
				margin-right -0.2em
				vertical-align top
				width 230px
				img
					width 100%

			a 
				color #FFF
				text-align center
				text-decoration none
				text-transform uppercase
				

				.title
					display block
					font-weight 700
					margin-top 20px
				.title, .des
					font-size 24px

				.des
					display block
					margin-top 20px
					strong
						font-weight 700
	

	

	#contenido
		background $gris_claro2

		#center-content
			
			.content
				display inline-block
				height 340px
				margin-right -0.2em
				overflow hidden
				padding .5em
				position relative
				vertical-align top

				h3
					font-size 24px
					text-transform uppercase
				h4
					color $verde
					font-size 14px
					font-weight 400
					margin 0
				p 
					font-size 14px
				a 
					background $gris_oscuro
					bottom 10px
					color #FFF
					display block
					float right
					font-size 20px
					height 30px
					position absolute
					right 10px
					text-align center
					text-decoration none
					width 30px
				a:hover
					background $verde



			.left-content
				background $gris_claro2

			.left-content, .center-content
				width 220px

			.testimonials
				background $gris_oscuro
				color #fff
				padding .5em 1em 
				width 455px

				.fecha, .autor
					display block
					font-style italic

		#breadcumbs
			//background $gris_claro2
			display block
			padding .5em
			
			ul
				margin 0
				padding 0
				li 
					list-style none
					display inline-block
					vertical-align top
					//margin-right .5em

					.divider
						padding 0 5px

		#title
			background $gris_oscuro
			color #FFF
			display block
			font-size 30px
			padding .1em
			text-transform uppercase
			p,h1,h2,h3,h4 
				margin 0


		#left,#main,.item-page,.search 
			display inline-block
			margin-right -0.2em
			vertical-align top
		#left
			background $gris_claro2
			width 250px

			ul
				margin 20px 0
				min-height 390px
				padding 0 0 0 30px

				
				li 
					list-style disc
					margin-bottom 5px
					


					a 
						color $gris_oscuro
						display block
						font-size 14px
						padding .3em .5em
						text-decoration none
					a:hover
						background $gris_oscuro
						color #FFF

		#main,.item-page,.search  
			background #fff
			min-height 400px
			padding 1em
			width 678px
			h2
				font-size 18px
				font-style italic
				font-weight 400
			p 
				font-size 14px
			img
				max-width 100%




	footer
		background $gris_oscuro
		color #ebeae6
		margin-top 20px

		a 
			color #ebeae6
			text-decoration none
		.column
			display inline-block
			margin-right -0.2em
			padding .5em
			vertical-align top
			width 220px

			h3
				text-transform uppercase
			ul
				list-style disc
				padding 0 0 0 20px
				
				li
					font-size 14px
					padding .3em
					text-transform uppercase

					

			input[type="text"],input[type="email"],textarea
				width 100%

			button,input[type="submit"]
				background #fff
				border none
				clear both
				color $gris_oscuro
				cursor pointer
				float left
				font-size 12px
				height 26px
				margin-right 4px
				width 80px
		.column-4
			#logo-footer
				margin-top 20px
			p 
				font-size 12px
				font-style italic
			
			#facebook,#twitter
				background #FFF
				border-radius 5px
				color $gris_oscuro
				display inline-block
				padding .5em
				margin-right .5em

			#facebook:hover,#twitter:hover
				background $verde	



			

			 
				






			
			








